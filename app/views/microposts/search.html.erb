<h1>Elastic search for posts</h1>

<%= form_for :search_posts, url: search_microposts_path, method: :get do |form| %>
  <%= form.text_field :query, value: params[:search_posts].presence && params[:search_posts][:query] %>
  <%= form.submit 'Search' %>
<% end %>

<% unless @posts.nil? %>
  <% if @posts.empty? %>
    <h2>No posts found matching your query.</h2>
  <% else %>
    <h2>Search results</h2>


    <table style="width: 100%;">
      <thead>
      <tr>
        <th>Content</th>
        <th>user_id</th>
      </tr>
      </thead>

      <tbody>
      <% @posts.each do |post| %>
        <tr>
          <% post[:primary].content.each do |keyword| %>
             <td><%= keyword.html_safe %></td>
            <% end %>
<!--          <td><%#= post.user_id %></td>-->
        </tr>
      <% end %>
      <tbody>
      </table>
  <% end %>
<% end %>